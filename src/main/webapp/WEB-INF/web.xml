<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  
    <display-name>My Web Application</display-name> 
	<description> 
		A WebDatabase Application. 
	</description>
	
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    </welcome-file-list>
	
	<!-- Define servlets that are included in the WebDatabase application -->
	<servlet>
		<description>A Servlet controller</description>
		<display-name>Controller</display-name> 
		<servlet-name>Controller</servlet-name>
		<servlet-class>Controller</servlet-class> 
	</servlet>
	<servlet>
		<description>A Servlet controller</description>
		<display-name>LibrarianCheckinController</display-name>
		<servlet-name>LibrarianCheckinController</servlet-name> 
		<servlet-class>LibrarianCheckinController</servlet-class> 
	</servlet> 
	<servlet>
		<description>A Servlet controller</description>
		<display-name>LibrarianCheckoutController</display-name>
		<servlet-name>LibrarianCheckoutController</servlet-name>  
		<servlet-class>LibrarianCheckoutController</servlet-class> 
	</servlet>
	<servlet>
		<description>A Servlet controller</description> 
		<display-name>LibrarianLoginController</display-name> 
		<servlet-name>LibrarianLoginController</servlet-name> 
		<servlet-class>LibrarianLoginController</servlet-class> 
	</servlet>
	<servlet> 
		<description>A Servlet controller</description> 
		<display-name>MemberLoginController</display-name> 
		<servlet-name>MemberLoginController</servlet-name> 
		<servlet-class>MemberLoginController</servlet-class> 
	</servlet>
	<servlet> 
		<description>A Servlet controller</description> 
		<display-name>MemberViewborrowedController</display-name>
		<servlet-name>MemberViewborrowedController</servlet-name> 
		<servlet-class>MemberViewborrowedController</servlet-class> 
	</servlet>
	<servlet> 
		<description>A Servlet controller</description> 
		<display-name>MemberViewonholdController</display-name> 
		<servlet-name>MemberViewonholdController</servlet-name>
		<servlet-class>MemberViewonholdController</servlet-class> 
	</servlet>
	<servlet> 
		<description>A Servlet controller</description> 
		<display-name>SearchController</display-name> 
		<servlet-name>SearchController</servlet-name> 
		<servlet-class>SearchController</servlet-class> 
	</servlet> 
	
	<servlet-mapping> 
		<servlet-name>Controller</servlet-name> 
		<url-pattern>/Controller</url-pattern> 
	</servlet-mapping>
    <servlet-mapping> 
		<servlet-name>LibrarianCheckinController</servlet-name> 
		<url-pattern>/LibrarianCheckinController</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>LibrarianCheckoutController</servlet-name> 
		<url-pattern>/LibrarianCheckoutController</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>LibrarianLoginController</servlet-name> 
		<url-pattern>/LibrarianLoginController</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>MemberLoginController</servlet-name> 
		<url-pattern>/MemberLoginController</url-pattern> 
	</servlet-mapping>
    <servlet-mapping> 
		<servlet-name>MemberViewborrowedController</servlet-name> 
		<url-pattern>/MemberViewborrowedController</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>MemberViewonholdController</servlet-name> 
		<url-pattern>/MemberViewonholdController</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>SearchController</servlet-name> 
		<url-pattern>/SearchController</url-pattern> 
	</servlet-mapping>

</web-app>
